// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum ScheduleBucket {
  MORNING      // 06:00-12:00
  AFTERNOON    // 12:00-17:00
  EVENING      // 17:00-21:00
  NIGHT        // 21:00-06:00
  UNSCHEDULED
}

model DailyPlan {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date      String   // YYYY-MM-DD
  content   String   // Text content
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, date])
}

model User {
  id        String   @id @default(uuid())
  name      String
  roomId    String
  room      Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  completions Completion[]
  dailyPlans DailyPlan[]
  createdAt DateTime @default(now())
}

model Room {
  id        String   @id @default(uuid())
  code      String   @unique
  users     User[]
  tasks     Task[]
  schedules TaskSchedule[]
  createdAt DateTime @default(now())
}

model Task {
  id          String       @id @default(uuid())
  content     String
  roomId      String
  room        Room         @relation(fields: [roomId], references: [id], onDelete: Cascade)
  isGlobal    Boolean      @default(true)
  scheduledTime String?    // e.g. "09:00", "Morning", "2pm"
  completions Completion[]
  schedules   TaskSchedule[]
  createdAt   DateTime     @default(now())
}

model Completion {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  date      String   // YYYY-MM-DD
  createdAt DateTime @default(now())

  @@unique([userId, taskId, date])
}

model TaskSchedule {
  id          String         @id @default(uuid())
  roomId      String
  room        Room           @relation(fields: [roomId], references: [id], onDelete: Cascade)
  taskId      String
  task        Task           @relation(fields: [taskId], references: [id], onDelete: Cascade)
  date        String         // YYYY-MM-DD
  
  startMinute Int?           // 0-1439 (minutes from midnight), null if unscheduled
  endMinute   Int?           // 0-1439, null if unscheduled
  bucket      ScheduleBucket // Time bucket for grouping
  confidence  Float          // 0.0-1.0 AI confidence score
  source      String         // "AI" or "USER"
  
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  
  @@unique([roomId, taskId, date])
  @@index([roomId, date])
}
